<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.AddStudentActivity">


<!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:text="Add Student"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="35dp"
            android:src="@drawable/camera" />

        <EditText
            android:id="@+id/etStudentName"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:padding="9dp"
            android:background="@color/textBox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Student name" />

        <EditText
            android:id="@+id/etFatherName"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:padding="9dp"
            android:background="@color/textBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Father's name" />

        <EditText
            android:id="@+id/etRollNo"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:padding="9dp"
            android:background="@color/textBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Roll no" />

        <Spinner
            android:id="@+id/spinnerClasses"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/computer_science_courses" />

        <Spinner
            android:id="@+id/spinnerCourses"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/departments_list" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@android:color/white"
            android:background="@drawable/grad_blue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add" />
    </LinearLayout>
</LinearLayout>