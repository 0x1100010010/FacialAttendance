<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activities.StartingActivity">


    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/top_bar">

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_white_bg"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_margin="16dp"
            android:id="@+id/btnTeacherLogin"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/teacher_ic"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:textColor="@android:color/black"
                    android:text="Teacher login"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="16dp"
            android:id="@+id/btnStdLogin"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/student_ic"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:textColor="@android:color/black"
                    android:text="Student login"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:text="New Teacher?"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnRegTeacher"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Register here"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_blue_dark" />

        </LinearLayout>
        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:text="New Student?"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnRegStd"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Register here"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_blue_dark"  />

        </LinearLayout>



    </LinearLayout>

</ScrollView>
</LinearLayout>