<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/grey">

    <!--
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="Facial Attendance"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />
    -->

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/top_bar">

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:text="Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:src="@drawable/usa_logo_blue" />

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_margin="15dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="9dp"
                    app:cardBackgroundColor="@color/cards"
                    android:layout_width="300dp"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:id="@+id/btnMarkAttendance"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/mark_att"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="9dp"/>

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:text="Mark Attendance"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="16dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/cards"
                    android:layout_width="300dp"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:id="@+id/btnViewAttendance"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/view_att"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="9dp"/>

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:text="View Attendance"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="16dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/cards"
                    android:layout_width="300dp"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:id="@+id/btnManualAttendence"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/manual_attendance"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="9dp"/>

                        <TextView
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:text="Mark Manual"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="16dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/cards"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="50dp">

                    <LinearLayout
                        android:id="@+id/layLogout"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/logout_ic"
                            android:layout_width="70dp"
                            android:layout_height="70dp" />

                        <TextView
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:textColor="@android:color/black"
                            android:text="Logout"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>




            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_blue"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/tasklist_40px" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue2Clr"
                    android:gravity="center"
                    android:text="Mark Attendance"
                    android:textColor="@android:color/white" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_blue"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/search_property_40px" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue2Clr"
                    android:gravity="center"

                    android:textColor="@android:color/white" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_blue"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/tasklist_40px" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue2Clr"
                    android:gravity="center"

                    android:textColor="@android:color/white" />


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:visibility="gone"
                app:cardElevation="8dp">

                <Button

                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_blue"
                    android:drawableTop="@drawable/tasklist_40px"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="Mark Attendance"
                    android:textColor="@color/blue2Clr" />


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">


                <Button
                    android:id="@+id/btnAddStudent"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_blue"
                    android:drawableTop="@drawable/add_administrator_40px"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="Add Student"
                    android:textColor="@color/blue2Clr"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnAddClass"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_blue"
                    android:drawableTop="@drawable/training_40px"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="Add Class"
                    android:textColor="@color/blue2Clr"
                    android:visibility="gone" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:visibility="gone"
                app:cardElevation="8dp">

                <Button

                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_blue"
                    android:drawableTop="@drawable/search_property_40px"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="View Attendance"
                    android:textColor="@color/blue2Clr" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">


                <Button
                    android:id="@+id/btnAddCourse"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_blue"
                    android:drawableTop="@drawable/book_40px"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="Add course"
                    android:textColor="@color/blue2Clr"
                    android:visibility="gone" />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"
                android:visibility="gone"
                app:cardElevation="8dp">

                <Button

                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_blue"
                    android:drawableTop="@drawable/tasklist_40px"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:text="Manual Attendence"
                    android:textColor="@color/blue2Clr" />


            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>